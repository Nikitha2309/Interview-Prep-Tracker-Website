<%- include('partials/header'); -%>


<section class="section" id="about">
    <div class="container " style="text-align: center; color:red;">
        <h3> LET'S START SOLVING </h3>

      <%  for (i = 0; i < topics.length;) {   %>
        <section class="section" id="about">
            <div class="container">
                <div class="row">
                    <% if(i< topics.length) { %>
                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12"
                        data-scroll-reveal="enter left move 30px over 0.6s after 0.4s">
                        <div class="features-item">
                            <div class="features-icon">
                                <h2><%= i+1 %></h2>
                                <br>
                                <img src="/images/features-icon-1.png" alt="">
                                <h4><%- topics[i]['name'] %></h4>
                                <a href="/topics/<%- topics[i]['name'] %>" class="main-button">
                                    Practise
                                </a>
                            </div>
                        </div>
                    </div>
                    <% } %>
                    <% i++; %>
                    <% if(i< topics.length) { %>
                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12"
                        data-scroll-reveal="enter bottom move 30px over 0.6s after 0.4s">
                        <div class="features-item">
                            <div class="features-icon">
                                <h2><%= i+1 %></h2>
                                <br>
                                <img src="/images/features-icon-2.png" alt="">
                                <h4><%- topics[i]['name'] %></h4>
                                <a href="/topics/<%- topics[i]['name'] %>" class="main-button">
                                    Practise
                                </a>
                            </div>
                        </div>
                    </div>
                    <% } %>
                    <% i++; %>
                    <% if(i< topics.length) { %>
                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12"
                        data-scroll-reveal="enter right move 30px over 0.6s after 0.4s">
                        <div class="features-item">
                            <div class="features-icon">
                                <h2><%= i+1 %></h2>
                                <br>
                                <img src="/images/features-icon-3.png" alt="">
                                <h4><%- topics[i]['name'] %></h4>
                                <a href="/topics/<%- topics[i]['name'] %>" class="main-button">
                                    Practise
                                </a>
                            </div>
                        </div>
                    </div>
                    <% } %>
                    <% i++; %>
                </div>
            </div>
        </section>
        <% } %>
    </div>
</section>

<%- include('partials/footer'); -%> 


